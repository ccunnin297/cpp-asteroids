{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "(lldb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/a.out",
            "args": [
                "-L${workspaceRoot}/src/include/SFML-2.4.2/include",
                "-lsfml-graphics", 
                "-lsfml-window", 
                "-lsfml-system"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [
                {
                    "name":"LD_LIBRARY_PATH",
                    "value":"${workspaceRoot}/src/include/SFML-2.4.2/lib"
                }
            ],
            "externalConsole": false,
            "MIMode": "lldb"
        }
    ]
}